{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    {{ include('user/_header_user.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles.0|replace({'ROLE_': ''}) }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName|capitalize }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name|capitalize }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ user.type }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td><span class="badge text-bg-{{ user.status == 0  ? 'danger' : 'success'}}"> {{ user.status == 0  ? 'Désactivé' : 'Activé'}}</span></td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sex ? 'Femme' : 'Homme' }}</td>
            </tr>
            <tr>
                <th>Employé</th>
                <td>{{ user.employee ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
